		}
		else {
			A = false;
			cout << "введено не римское число\n";
			return 0;
		}
	}
	for (int i = E.size() - 1; i >= 0; i--) {
		H = E[i];
		G = number(H);
		if (prev < G) {
			result += G;
		}
		else {
			result -= G;
		}
